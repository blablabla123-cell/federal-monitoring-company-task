// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  // Autogenerated
  id Int @id @default(autoincrement())

  // Content
  title String

  // User it belongs to
  user   User @relation("TaskUser", fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  // Technical
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tasks")
}

model User {
  // Autogenerated
  id Int @id @default(autoincrement())

  // Content
  email    String  @unique
  password String?
  name     String
  tasks    Task[]  @relation("TaskUser")

  // Refresh Token Hash; Hidden values
  rtHash String?

  // Technical
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
