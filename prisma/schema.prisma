// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Task {
  // Autogenerated
  id Int @id @default(autoincrement())

  // Content
  title       String

  // User it belongs to
  user   User @relation("TaskUser", fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  // In favourites list of someone
  favoredBy User[] @relation("TaskFavoredBy")

  // Technical
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reports Report[]

  @@map("tasks")
}

model Report {
  id     Int   @id @default(autoincrement())
  user   User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  total  Int

  // Technical
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reports")
}

model User {
  // Autogenerated
  id Int @id @default(autoincrement())

  // Content
  email      String  @unique
  password   String?
  name       String
  tasks      Task[]  @relation("TaskUser")
  favourites Task[] @relation("TaskFavoredBy")

  // Refresh Token Hash; Hidden values
  rtHash String?

  // Technical
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
